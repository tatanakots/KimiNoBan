{
  "name": "kiminoban",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "main": "electron/main.js",
  "author": "Tatanako",
  "description": "君の番だ。",
  "scripts": {
    "dev": "cross-env VITE_DEV_SERVER_URL=http://127.0.0.1:5174 concurrently \"vite --port 5174 --host 127.0.0.1\" \"wait-on http://127.0.0.1:5174 && electron .\"",
    "build": "vite build && electron-builder build"
  },
  "build": {
    "appId": "im.mtf.tatanakots.kiminoban",
    "productName": "KimiNoBan",
    "files": [
      "dist/**/*",
      "electron/**/*",
      "assets/**/*"
    ],
    "directories": {
      "output": "dist-electron",
      "buildResources": "assets"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/watashidesuga.icns"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/watashidesuga.ico"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/watashidesuga.png"
    }
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.1.14",
    "daisyui": "^5.1.26",
    "dexie": "^4.2.1",
    "electron-store": "^11.0.2",
    "vue": "^3.5.22",
    "vue-router": "^4.5.1"
  },
  "devDependencies": {
    "@types/node": "^24.6.2",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vue/tsconfig": "^0.8.1",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^38.2.0",
    "electron-builder": "^26.0.12",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.14",
    "typescript": "~5.9.3",
    "vite": "^7.1.7",
    "vue-tsc": "^3.1.0",
    "wait-on": "^9.0.1"
  }
}
